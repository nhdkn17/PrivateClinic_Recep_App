<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.privateclinicms.controller.DoctorDetailController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <ImageView  fx:id="imgAvatar" fitWidth="100" fitHeight="100">
        <image>
            <Image url="@../../image/profile_icon.png"/>
        </image>
    </ImageView>
    <Label fx:id="lblTen" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="lblChuyenKhoa"/>
    <Label fx:id="lblSDT"/>
    <Label fx:id="lblEmail"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnEdit" text="Sửa" onAction="#handleEdit" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 8 20 8 20; -fx-cursor: hand;"/>
        <Button fx:id="btnDelete" text="Xóa" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 8 20 8 20; -fx-cursor: hand;"/>
    </HBox>
    <Button fx:id="btnClose" text="Đóng" onAction="#handleClose" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 8 20 8 20; -fx-cursor: hand;"/>
</VBox>
